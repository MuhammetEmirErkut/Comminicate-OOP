<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/widget_background"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/leaderBoardUselessImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="15dp"
                        android:layout_weight="1"
                        android:src="@drawable/leaderboard" />

                    <TextView
                        android:id="@+id/leaderboardUselesstextView"
                        android:layout_width="165dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="30dp"
                        android:fontFamily="@font/bungee_inline"
                        android:gravity="center"
                        android:text="LEADERBOARDDD"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="158dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/widget_background"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/stepsUselessImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="130dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:src="@drawable/stepbystep" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/stepsUselesstextView"
                        android:layout_width="165dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/bungee_inline"
                        android:gravity="center"
                        android:text="STEPS BACK"
                        android:textColor="@color/black" />

                    <Button
                        android:id="@+id/stepButton"
                        android:layout_width="130dp"
                        android:layout_height="54dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="18dp"
                        android:layout_marginEnd="26dp"
                        android:backgroundTint="@color/mavi4"
                        android:fontFamily="@font/bungee_inline"
                        android:gravity="center"
                        android:text="+696"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        app:strokeColor="#474747"
                        app:strokeWidth="2dp" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="158dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/widget_background"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="90dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="30dp"
                        android:layout_weight="1"
                        android:src="@drawable/clockreminder" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="30dp"
                            android:layout_marginEnd="30dp"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/bungee_inline"
                            android:gravity="center"
                            android:text="PET REMİNDER"
                            android:textColor="@color/black" />

                        <Button
                            android:id="@+id/addPetButton"
                            android:layout_width="130dp"
                            android:layout_height="54dp"
                            android:layout_gravity="center"
                            android:layout_marginEnd="26dp"
                            android:backgroundTint="@color/mavi4"
                            android:fontFamily="@font/bungee_inline"
                            android:gravity="center"
                            android:text="+Add PET"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            app:strokeColor="#474747"
                            app:strokeWidth="2dp" />
                    </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="158dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/widget_background"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/quizUselessImageView"
                    android:layout_width="80dp"
                    android:layout_height="136dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:src="@drawable/quizz" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/quizUselesstextView"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/bungee_inline"
                        android:gravity="center"
                        android:text="ANİMAL QUİZ"
                        android:textColor="@color/black" />

                    <Button
                        android:id="@+id/playQuizButton"
                        android:layout_width="130dp"
                        android:layout_height="54dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="26dp"
                        android:backgroundTint="@color/mavi4"
                        android:fontFamily="@font/bungee_inline"
                        android:gravity="center"
                        android:text="PLAY"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        app:strokeColor="#474747"
                        app:strokeWidth="2dp" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>